{
  "name": "glue",
  "version": "1.0.0",
  "scripts": {
    "build": "esbuild main.ts --bundle --format=esm --outfile=script.js",
    "deploy": "curl -L --url https://app.spacemaker.ai/api/integrate/generator_bundle/shapediverbox/script.js --upload-file ./script.js --header 'Authorization: Bearer '$SM_TOKEN --header 'content-type:application/javascript'",
    "deploy-paal": "yarn build && curl -H 'Authorization: Bearer $(spacemaker-cli api login token -w cus_paalm_test)' https://app.spacemaker.ai/api/integrate/shapepaal/shape-diver/script.js --upload-file script.js"
  },
  "dependencies": {
    "@shapediver/sdk.geometry-api-sdk-v2": "^1.1.0",
    "esbuild": "^0.15.13"
  },
  "devDependencies": {
    "esbuild": "^0.15.13",
    "typescript": "^4.8.4"
  }
}
